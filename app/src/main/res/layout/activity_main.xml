<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.mmatuszek.moneysaver.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa kosztu"
                android:id="@+id/textViewName" android:layout_marginLeft="10dp" android:textSize="16sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName" android:layout_marginLeft="13dp" android:hint="nazwa kosztu"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Typ"
                android:id="@+id/textViewType" android:layout_gravity="center" android:layout_marginLeft="10dp"
                android:textSize="16sp" android:textStyle="bold"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerType" android:layout_marginLeft="13dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Wartosc"
                android:id="@+id/textViewValue" android:layout_gravity="center" android:layout_marginLeft="10dp"
                android:textSize="16sp" android:textStyle="bold"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextValue" android:inputType="numberDecimal" android:layout_marginLeft="13dp" android:hint="wartosc"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Data"
                android:id="@+id/textViewDate" android:layout_gravity="center" android:layout_marginLeft="10dp"
                android:textSize="16sp" android:textStyle="bold"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextDate" android:layout_marginLeft="10dp" android:inputType="datetime" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
